<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditLabPackageActivity">

    <RelativeLayout

        android:id="@+id/rl_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="10dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/leftarrow"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="PACKAGE"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_edit"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_tile_editpg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:text="Title"
            tools:ignore="RtlCompat" />

        <EditText
            android:id="@+id/ed_title_editpg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_text"
            android:hint="Title"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_dec_editpg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:text="Description"
            tools:ignore="RtlCompat" />

        <EditText
            android:id="@+id/ed_des_editpg"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_text"
            android:hint="Description"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:textSize="14dp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/tv_charge_editpg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:text="Lab Charge"
            tools:ignore="RtlCompat" />
        <EditText
            android:id="@+id/ed_labcharge_editpg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Lab Charge"
            android:background="@drawable/shape_text"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:paddingStart="10dp"
            android:layout_marginEnd="10dp"
            android:paddingLeft="10dp"
            android:inputType="number"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbtn_ed_submit"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#0095B7"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:cornerRadius="10dp" />

    </LinearLayout>


</RelativeLayout>